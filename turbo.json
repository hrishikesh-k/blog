{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "@hrishikeshk/adapter#build": {
      "dependsOn": [
        "@hrishikeshk/utils#build"
      ]
    },
    "@hrishikeshk/cache#build": {
      "dependsOn": [
        "@hrishikeshk/site#check"
      ]
    },
    "@hrishikeshk/cache#restore": {
      "dependsOn": [
        "@hrishikeshk/cache#build"
      ],
      "passThroughEnv": [
        "NETLIFY",
        "NETLIFY_CACHE_DIR"
      ]
    },
    "@hrishikeshk/cache#save": {
      "dependsOn": [
        "@hrishikeshk/site#build"
      ],
      "passThroughEnv": [
        "NETLIFY",
        "NETLIFY_CACHE_DIR"
      ]
    },
    "@hrishikeshk/site#build": {
      "dependsOn": [
        "@hrishikeshk/cache#restore"
      ],
      "passThroughEnv": [
        "NETLIFY_API_KEY",
        "NOTION_API_KEY",
        "SITE_ID"
      ]
    },
    "@hrishikeshk/site#check": {
      "dependsOn": [
        "@hrishikeshk/site#sync"
      ]
    },
    "@hrishikeshk/site#deploy": {
      "dependsOn": [
        "@hrishikeshk/cache#save"
      ]
    },
    "@hrishikeshk/site#dev": {
      "dependsOn": [
        "@hrishikeshk/adapter#build"
      ]
    },
    "@hrishikeshk/site#sync": {
      "dependsOn": [
        "@hrishikeshk/adapter#build"
      ],
      "passThroughEnv": [
        "NETLIFY_API_KEY",
        "NOTION_API_KEY",
        "SITE_ID"
      ]
    },
    "@hrishikeshk/utils#build": {}
  }
}