{
  "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
  "css": {
    "formatter": {
      "enabled": true
    },
    "linter": {
      "enabled": true
    }
  },
  "files": {
    "ignore": [
      "**/.netlify/**",
      "**/.svelte-kit/**",
      "**/.turbo/**",
      "**/build/**",
      "**/dist/**"
    ],
    "include": [
      "**/packages/**/*"
    ]
  },
  "formatter": {
    "indentStyle": "space"
  },
  "javascript": {
    "formatter": {
      "bracketSameLine": true,
      "quoteStyle": "single",
      "semicolons": "asNeeded",
      "trailingCommas": "none"
    }
  },
  "json": {
    "parser": {
      "allowTrailingCommas": false
    }
  },
  "linter": {
    "rules": {
      "all": true
    }
  },
  "overrides": [{
    "include": [
      "**/packages/site/deno/**",
      "**/postcss.config.js",
      "**/svelte.config.js",
      "**/tailwind.config.ts"
    ],
    "linter": {
      "rules": {
        "style": {
          "noDefaultExport": "off"
        }
      }
    }
  }, {
    "include": [
      "**/packages/**"
    ],
    "linter": {
      "rules": {
        "correctness": {
          "noNodejsModules": "off"
        }
      }
    }
  }]
}